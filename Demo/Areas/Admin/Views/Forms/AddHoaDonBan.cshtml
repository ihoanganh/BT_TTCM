@model Demo.Models.HoaDonBan
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddHoaDonBan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminMain.cshtml";
}

<h1>Thêm Hóa Đơn Bán</h1>

<h4>Hóa Đơn Bán</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHoaDonBan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NgayXuat" class="control-label"></label>
                <input asp-for="NgayXuat" class="form-control" />
