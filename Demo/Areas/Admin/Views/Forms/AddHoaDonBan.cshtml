            </div>
            <div class="form-group">
                <label asp-for="KhuyenMai" class="control-label"></label>
                <input asp-for="KhuyenMai" class="form-control" />
                <span asp-validation-for="KhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNv" class="control-label"></label>
                <select asp-for="IdNv" class ="form-control" asp-items="ViewBag.IdNv"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdKh" class="control-label"></label>
                <select asp-for="IdKh" class ="form-control" asp-items="ViewBag.IdKh"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdBan" class="control-label"></label>
                <select asp-for="IdBan" class ="form-control" asp-items="ViewBag.IdBan"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
